<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceFragment">

    <!-- TextView para mostrar el uuid del dispositivo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20sp">

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:src="@android:drawable/ic_dialog_info" />

        <TextView
            android:id="@+id/device_icon_url_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="device_icon_url"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="device_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_model_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="device_model"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_online_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="device_online"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_uid_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="device_uid"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_uuid_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="device_uuid"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSendCommands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/Purpura_telecom"
            android:text="Send Commands"
            android:textColor="@color/material_dynamic_neutral20"
            app:iconTint="@color/Purpura_telecom"/>

    </LinearLayout>

</FrameLayout>